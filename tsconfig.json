{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "markdown-it"
    ], 
  },
  "include": ["./src/**/*", "./test/**/*"]
}
